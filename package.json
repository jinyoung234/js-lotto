{
  "name": "lotto",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start-step1": "ts-node -r tsconfig-paths/register src/step1-index.ts",
    "start-step3": "webpack serve --open --config step3.config.js",
    "test": "jest --watch"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/controller/LottoGameController/LottoGameController.util.ts",
      "<rootDir>/__tests__/controller/LottoGameController/LottoGameController.type.ts",
      "<rootDir>/__tests__/controller/LottoGameController/index.ts",
      "<rootDir>/node_modules"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.mjs$": "babel-jest",
      "^.+\\.tsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@step1(.*)$": "<rootDir>/src/step1$1",
      "^@test(.*)$": "<rootDir>/__tests__$1"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.8",
    "babel-jest": "^29.6.2",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "cypress": "^6.3.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^46.4.6",
    "esm": "^3.2.25",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.6.2",
    "prettier": "^3.0.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
